{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: ts-node-dev (custom env)",
      "env": {
        "WORKSPACE_ROOT": "/root/projetos/gpt-5-coder-base",
        "ALLOW_NETWORK": "true"
      },
  "program": "${workspaceFolder}/node_modules/ts-node-dev/lib/bin.js",
      "args": [
        "--respawn",
        "--inspect=9229",
        "${workspaceFolder}/src/server.ts"
      ],
      "cwd": "${workspaceFolder}",
      "autoAttachChildProcesses": true,
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
